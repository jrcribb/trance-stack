{
  "name": "grunge-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "yarn generate:css -- --minify",
    "build:remix": "remix build",
    "clean:all": "rm -rf node_modules",
    "dev": "run-p dev:*",
    "dev:arc": "node ./dev sandbox",
    "dev:remix": "remix watch",
    "lint": "eslint --cache --cache-location .cache/eslint .",
    "test": "jest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"cypress open\"",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test dev http://localhost:8811 \"cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/server/index.js",
    "/public/build"
  ],
  "dependencies": {
    "@architect/architect": "^10.3.3",
    "@architect/functions": "^5.1.0",
    "@remix-run/architect": "*",
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/server-runtime": "*",
    "bcryptjs": "2.4.3",
    "cuid": "^2.1.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@faker-js/faker": "^6.3.1",
    "@remix-run/dev": "*",
    "@remix-run/eslint-config": "*",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/architect__functions": "^3.13.6",
    "@types/bcryptjs": "2.4.2",
    "@types/eslint": "^8.4.2",
    "@types/node": "^17.0.40",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "c8": "^7.11.3",
    "cross-env": "^7.0.3",
    "cypress": "^9.6.1",
    "esbuild": "^0.14.39",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-tailored-tunes": "^5.0.2",
    "happy-dom": "^2.55.0",
    "jest": "^28.1.0",
    "mock-aws-s3": "^4.0.2",
    "msw": "^0.40.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "yarn": "^1.22.18"
  },
  "engines": {
    "node": ">=14"
  }
}
